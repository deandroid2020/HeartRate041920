<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".My_Acts.PReport">



    <TextView
        android:id="@+id/preportname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Report"
        android:textSize="50dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textStyle="bold"/>







    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_weight="2">
    </Space>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_weight="1"
            android:text="Today"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reportbeats"
            android:textSize="25dp"
            android:layout_weight="1"
            android:text="Avrage Heart Rate"/>



    </LinearLayout>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">


    </Space>





    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/retodate"
            android:textSize="30dp"
            android:layout_weight="1"
            android:text="20/29/02"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/retoavg"
            android:textSize="25dp"
            android:layout_weight="1"
            android:text="60-70"/>



    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="2">
    </Space>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reportyest"
            android:textSize="30dp"
            android:layout_weight="1"
            android:text="YesterDay"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"

            android:layout_weight="1"
            android:text="Avrage Heart Rate"/>



    </LinearLayout>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_weight="2">
    </Space>





    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reyesdate"
            android:textSize="30dp"
            android:layout_weight="1"
            android:text="20/29/02"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reyesavg"
            android:textSize="25dp"
            android:layout_weight="1"
            android:text="60-70"/>



    </LinearLayout>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="2">
    </Space>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General information :"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_weight="2"
        />



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_weight="1"
            android:text="Weight"
            />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/we"
            android:hint="in Kg"/>



    </LinearLayout>






    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_weight="1"
            android:text="Blood Type"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bloodtype"
            android:hint="A,AB,O,O+ Type"
            />



    </LinearLayout>


</LinearLayout>









